{
    "name": "dnadesign/basic-recipe",
    "description": "DNA Basic Recipe metapackage",
    "type": "silverstripe-recipe",
    "keywords": ["silverstripe", "dna", "recipe"],
    "require": {
        "php": ">=5.6.0",
        "silverstripe/recipe-plugin": "^1.3.0",
        "silverstripe/recipe-cms": "^4.2.1",
        "stevie-mayhew/silverstripe-svg": "^2.1",
        "benmanu/silverstripe-styleguide": "0.1.1",
        "dnadesign/silverstripe-dna": "^2.0",
        "jonom/silverstripe-betternavigator": "^4.1.1",
        "adrexia/standardsediting": "^2.0",
        "symbiote/silverstripe-gridfieldextensions": "^3.1"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:dnadesign/silverstripe-dna.git"
        }
    ],
    "require-dev": {
        "phpunit/PHPUnit": "^5.7",
        "silverstripe/testsession": "^2.0"
    },
    "extra": {
        "project-files": [
            "app/_config/*",
            "app/css/*",
            "app/images/*",
            "app/tests/*",
            "app/styleguide/*",
            "public/*",
            "./.editorconfig",
            "./.example.env",
            "./.gitignore",
            "./.gitlab-ci.yml",
            "./.htaccess",
            "./Makefile",
            "phpunit.xml.dist",
            "theme-default/*"
        ],
        "public-files": [
            "assets/*",
            "theme-default/dist/css/*",
            "theme-default/dist/fonts/*",
            "theme-default/dist/images/*",
            "theme-default/dist/js/*",
            "theme-default/dist/svg/*"
        ],
        "expose": [
            "theme-default/dist/css",
            "theme-default/dist/fonts",
            "theme-default/dist/images",
            "theme-default/dist/js",
            "theme-default/dist/svg"
        ]
    },
    "config": {
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
